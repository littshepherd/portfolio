---
const {imageURL, name, description} = Astro.props
---

<div class="flex items-center gap-8 p-8">
    <div class="flex flex-col justify-center    items-center w-10">
        <img src={imageURL} alt="" >
        <span class="text-white">{name}</span>
    </div>
    <div class="w-[20rem]">
        <p class="text-white">
            {description}
        </p>
    </div>
</div>
